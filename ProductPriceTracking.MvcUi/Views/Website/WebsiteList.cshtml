@inject IWebsiteService websiteService
@{
    ViewData["Title"] = "WebsiteList";
}

<div class="row">
    <button type="button" class="btn btn-sm btn-primary w-100 rounded-0" data-toggle="modal" data-target="#websiteCreateModal">
        <i class="fas fa-plus"></i>
    </button>
    <table class="table table-light table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Icon</th>
                <th>URL</th>
                <th>Ad</th>
                <th>Ürün</th>
                <th>Konum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in await websiteService.GetWebsites())
            {
                <tr>
                    <td class="py-2 text-center">
                        @if (!item.IconName.EmptyCheck())
                        {
                            <img class="img-fluid " style="max-height:34px" src="~/UploadImages/WebsiteIcons/@item.IconName" asp-append-version="true" />
                        }
                    </td>
                    <td>@item.BaseUrl</td>
                    <td>@item.Name</td>
                    <td>@item.Products?.Count()</td>
                    <td>@item.PricePositions?.Count()</td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Icon</th>
                <th>URL</th>
                <th>Ad</th>
                <th>Ürün</th>
                <th>Konum</th>
            </tr>
        </tfoot>
    </table>
</div>



@section Modals{
    <div class="modal fade" id="websiteCreateModal" tabindex="-1" role="dialog" aria-labelledby="Website Create Modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Website</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @await Component.InvokeAsync("WebsiteCreateForm", new ModalViewModel("websiteCreateModal", "wcmSubmitBtn"))
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button type="button" id="wcmSubmitBtn" class="btn btn-primary">Ekle</button>
                </div>
            </div>
        </div>
    </div>
}

